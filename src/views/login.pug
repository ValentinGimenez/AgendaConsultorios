block scripts
  script.
    document.addEventListener('DOMContentLoaded', () => {
      const tabButtons = document.querySelectorAll('.tab-button');
      const tabContents = document.querySelectorAll('.tab-content');

      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const targetTab = button.dataset.tab;
          tabButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
          tabContents.forEach(content => {
            content.classList.remove('active');
            if (content.id === `${targetTab}-tab`) {
              content.classList.add('active');
            }
          });
        });
      });

      const fileInput = document.getElementById('dni-file');
      const fileNameDisplay = document.getElementById('file-name-display');
      const fileUpload = document.querySelector('.file-upload');
      
      if (fileInput && fileUpload) {
        fileInput.addEventListener('change', (e) => {
          const fileName = e.target.files[0]?.name;
          if (fileName) {
            fileNameDisplay.textContent = `Archivo: ${fileName}`;
            fileNameDisplay.style.color = '#2563eb';
            fileNameDisplay.style.fontWeight = '600';
            fileUpload.style.borderColor = '#2563eb';
            fileUpload.style.background = '#eff6ff';
          }
        });
      }

      const checkExistente = document.getElementById('esPacienteExistente');
      const containerDatos = document.querySelector('.datos-personales-container');
      const msgNuevo = document.getElementById('msgNuevo');
      const msgExistente = document.getElementById('msgExistente');
      const inputsOcultables = containerDatos.querySelectorAll('input');

      checkExistente.addEventListener('change', (e) => {
        if(e.target.checked) {
          containerDatos.style.display = 'none';
          msgNuevo.style.display = 'none';
          msgExistente.style.display = 'block';
          inputsOcultables.forEach(inp => inp.removeAttribute('required'));
        } else {
          containerDatos.style.display = 'block';
          msgNuevo.style.display = 'block';
          msgExistente.style.display = 'none';
          document.getElementById('nombre').setAttribute('required', '');
          document.getElementById('apellido').setAttribute('required', '');
          document.getElementById('telefono').setAttribute('required', '');
        }
      });

      const loginForm = document.getElementById('loginForm');
      const loginError = document.getElementById('loginError');
      const loginSuccess = document.getElementById('loginSuccess');

      loginForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const nombre = document.getElementById('login-nombre').value.trim();
        const password = document.getElementById('password').value;

        loginError.classList.remove('visible');
        loginSuccess.classList.remove('visible');

        if (!nombre || !password) {
          loginError.textContent = 'Por favor completa todos los campos';
          loginError.classList.add('visible');
          return;
        }

        try {
          const response = await fetch('/usuario/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ nombre, password }),
          });
          const data = await response.json();
          if (response.ok) {
            loginSuccess.textContent = 'Inicio de sesión exitoso. Redirigiendo...';
            loginSuccess.classList.add('visible');
            setTimeout(() => {
              window.location.href = data.redirectUrl || '/dashboard';
            }, 1500);
          } else {
            loginError.textContent = data.message || 'Credenciales inválidas';
            loginError.classList.add('visible');
          }
        } catch (error) {
          loginError.textContent = 'Error de conexión. Intenta nuevamente.';
          loginError.classList.add('visible');
        }
      });

      const registerForm = document.getElementById('registerForm');
      const registerError = document.getElementById('registerError');
      const registerSuccess = document.getElementById('registerSuccess');

      registerForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(registerForm);
        const password = formData.get('password');
        const confirmPassword = formData.get('confirmPassword');

        registerError.classList.remove('visible');
        registerSuccess.classList.remove('visible');

        if (password !== confirmPassword) {
          registerError.textContent = 'Las contraseñas no coinciden';
          registerError.classList.add('visible');
          return;
        }
        if (password.length < 6) {
          registerError.textContent = 'La contraseña debe tener al menos 6 caracteres';
          registerError.classList.add('visible');
          return;
        }

        try {
          const response = await fetch('/usuario/register', {
            method: 'POST',
            body: formData,
          });
          const data = await response.json();
          if (response.ok) {
            registerSuccess.textContent = 'Registro exitoso. Redirigiendo...';
            registerSuccess.classList.add('visible');
            setTimeout(() => {
              window.location.href = '/usuario/login';
            }, 2000);
            registerForm.reset();
          } else {
            registerError.textContent = data.message || 'Error en el registro';
            registerError.classList.add('visible');
          }
        } catch (error) {
          registerError.textContent = 'Error de conexión. Intenta nuevamente.';
          registerError.classList.add('visible');
        }
      });
    });