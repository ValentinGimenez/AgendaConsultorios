    style.
      /* ===== CSS VARIABLES ===== */
      :root {
        --color-primary: #6366f1;
        --color-primary-dark: #4f46e5;
        --color-accent: #10b981;
        --color-background: #f8fafc;
        --color-surface: #ffffff;
        --color-text-primary: #0f172a;
        --color-text-secondary: #64748b;
        --color-border: #e2e8f0;
        --color-danger: #ef4444;
        --color-danger-dark: #dc2626;
        
        --nav-height: 70px;
        --sidebar-width: 280px;
        
        --shadow-soft: 0 1px 3px rgba(0, 0, 0, 0.06);
        --shadow-medium: 0 4px 12px rgba(0, 0, 0, 0.08);
        --shadow-elevated: 0 8px 24px rgba(0, 0, 0, 0.12);
        
        --transition: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* ===== RESET ===== */
      *, *::before, *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', sans-serif;
        background: var(--color-background);
        color: var(--color-text-primary);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* ===== HEADER ===== */
      header.main-header {
        background: var(--color-surface);
        border-bottom: 1px solid var(--color-border);
        box-shadow: var(--shadow-soft);
        height: var(--nav-height);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2rem;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      /* ===== LOGO ===== */
      .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-primary);
        text-decoration: none;
      }

      .logo-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: white;
        box-shadow: var(--shadow-medium);
      }

      /* ===== NAVIGATION ===== */
      .role-nav {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex: 1;
        justify-content: center;
      }

      .role-link {
        text-decoration: none;
        color: var(--color-text-secondary);
        font-weight: 500;
        font-size: 0.9375rem;
        padding: 0.625rem 1.25rem;
        border-radius: 10px;
        transition: all var(--transition);
        position: relative;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .role-link:hover {
        color: var(--color-primary);
        background: rgba(99, 102, 241, 0.08);
      }

      .role-link.active {
        color: var(--color-primary);
        background: rgba(99, 102, 241, 0.12);
        font-weight: 600;
      }

      .role-link.active::after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 2px;
        background: var(--color-primary);
        border-radius: 2px 2px 0 0;
      }

      /* ===== USER SECTION ===== */
      .header-right {
        position: relative;
      }

      .user-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        cursor: pointer;
        transition: all var(--transition);
        background: var(--color-background);
        border: 1px solid var(--color-border);
      }

      .user-section:hover {
        background: var(--color-surface);
        box-shadow: var(--shadow-medium);
        border-color: var(--color-primary);
      }

      .user-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        flex-shrink: 0;
      }

      .user-info {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
      }

      .user-name {
        font-weight: 600;
        color: var(--color-text-primary);
        font-size: 0.9375rem;
      }

      .user-role {
        font-size: 0.8125rem;
        color: var(--color-text-secondary);
        text-transform: capitalize;
      }

      .user-chevron {
        color: var(--color-text-secondary);
        transition: transform var(--transition);
        font-size: 0.75rem;
      }

      .user-section:hover .user-chevron {
        transform: rotate(180deg);
      }

      /* ===== LOGOUT DROPDOWN ===== */
      .logout-dropdown {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 12px;
        box-shadow: var(--shadow-elevated);
        min-width: 200px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all var(--transition);
        z-index: 200;
      }

      .header-right:hover .logout-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }

      .logout-dropdown a {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.25rem;
        color: var(--color-danger);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9375rem;
        transition: all var(--transition);
        border-radius: 10px;
        margin: 0.25rem;
      }

      .logout-dropdown a:hover {
        background: rgba(239, 68, 68, 0.08);
        color: var(--color-danger-dark);
      }

      /* ===== MAIN CONTENT ===== */
      main {
        flex: 1;
        max-width: 1400px;
        width: 100%;
        margin: 0 auto;
        padding: 2rem;
      }

      /* ===== RESPONSIVE ===== */
      @media (max-width: 1024px) {
        header.main-header {
          padding: 0 1.5rem;
        }

        .role-nav {
          gap: 0.25rem;
        }

        .role-link {
          padding: 0.5rem 0.875rem;
          font-size: 0.875rem;
        }

        main {
          padding: 1.5rem;
        }
      }

      @media (max-width: 768px) {
        header.main-header {
          flex-wrap: wrap;
          height: auto;
          padding: 1rem;
        }

        .logo {
          font-size: 1.25rem;
        }

        .logo-icon {
          width: 36px;
          height: 36px;
          font-size: 1.125rem;
        }

        .role-nav {
          width: 100%;
          order: 3;
          flex-wrap: wrap;
          margin-top: 0.5rem;
        }

        .role-link {
          flex: 1 1 auto;
          min-width: calc(50% - 0.25rem);
          justify-content: center;
        }

        main {
          padding: 1rem;
        }
      }

      @media (max-width: 480px) {
        .role-link {
          min-width: 100%;
        }

        .user-info {
          display: none;
        }

        .user-section {
          padding: 0.5rem;
        }
      }

