extends ../layout

block content
  h1 Lista de Pacientes

  table#tablaPacientes.display
    thead
      tr
        th ID
        th Nombre y Apellido
        th Correo
        th DNI
        th Tel√©fono
        th Obra Social
        th Acciones
    tbody
      each paciente in pacientes
        tr
          td= paciente.id 
          td= paciente.nombre + ' ' + paciente.apellido
          td= paciente.mail
          td= paciente.dni
          td= paciente.telefono
          td= paciente.nombreObraSocial
          td
            a(href=`/paciente/${paciente.id}/editar`) Editar
            a(href=`/paciente/${paciente.id}/agendarTurno`) Agendar Turno


block scripts
  script(src='https://code.jquery.com/jquery-3.7.1.min.js')
  script(src='https://cdn.datatables.net/2.1.8/js/dataTables.min.js')
  script.
    $(document).ready(function () {
       $('#tablaPacientes').DataTable({
        dom: 'frtip', 
        order: [[5, 'asc']] ,
        paging: false,
        language: {
          info: "", 
          search: "Buscar pacientes",
        }
      })
    });
  block styles
    style.
      #tablaPacientes_wrapper{ 
        border-collapse: collapse;
        width: 100%;
        max-width: 800px; 
        margin: 20px auto; 
      }

      th, td {
        border: 1px solid #ddd; 
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2; 
        font-weight: bold;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9; 
      }

      tr:hover {
        background-color: #e9e9e9; 
      }

      td a {
        display: inline-block;
        padding: 5px 10px;
        margin-right: 5px;
        background-color: #007bff; 
        color: white;
        text-decoration: none;
        border-radius: 4px;
      }

      td a:hover {
        background-color: #0056b3; 
      }
      #tablaPacientes_wrapper .dt-search {
        padding-bottom: 20px;
        width: 100%; 
        text-align: right; 
      }