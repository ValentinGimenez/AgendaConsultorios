extends ../layout

block content
  .pacientes-container
    .header-actions
      h1.page-title Lista de Pacientes
      
      a.btn.btn-nuevo(href="/paciente/nuevo")
        svg(viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round")
          circle(cx="12" cy="12" r="10")
          line(x1="12" y1="8" x2="12" y2="16")
          line(x1="8" y1="12" x2="16" y2="12")
        span Nuevo Paciente

    table#tablaPacientes.display
      thead
        tr
          th ID
          th Nombre y Apellido
          th Correo
          th DNI
          th Tel√©fono
          th Obra Social
          th Acciones
      tbody
        each paciente in pacientes
          tr
            td= paciente.id 
            td= paciente.nombre + ' ' + paciente.apellido
            td= paciente.mail
            td= paciente.dni
            td= paciente.telefono
            td= paciente.nombreObraSocial
            td.acciones
              a.btn.btn-editar(href=`/paciente/${paciente.id}/editar`) Editar
              a.btn.btn-agendar(href=`/paciente/${paciente.id}/agendarTurno`) Agendar Turno 

block scripts
  script(src='https://code.jquery.com/jquery-3.7.1.min.js')
  script(src='https://cdn.datatables.net/2.1.8/js/dataTables.min.js')
  script.
    $(document).ready(function () {
       $('#tablaPacientes').DataTable({
        dom: 'frtip', 
        order: [[0, 'asc']] ,
        paging: false,
        language: {
          info: "", 
          search: "Buscar pacientes",
        }
      })
    });

  block styles
    style.
      .pacientes-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      
      .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
      }

      .page-title {
        font-size: 2em;
        color: #333;
        margin: 0; 
      }

      #tablaPacientes { 
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
      }
      #tablaPacientes th, #tablaPacientes td { 
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      #tablaPacientes th { 
        background-color: #f8f9fa;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9em;
      }
      #tablaPacientes tr:last-child td { 
        border-bottom: none;
      }
      #tablaPacientes tr:nth-child(even) { 
        background-color: #f9f9f9;
      }
      #tablaPacientes tr:hover { 
        background-color: #f0f0f0;
      }
      .acciones {
        white-space: nowrap;
      }
      .btn {
        display: inline-flex; 
        align-items: center;
        justify-content: center;
        gap: 5px;
        padding: 8px 16px;
        margin: 2px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        text-decoration: none;
        transition: all 0.2s;
        font-family: inherit;
        font-weight: 500;
      }
      .btn-editar {
        background-color: #007bff;
        color: white;
      }
      .btn-agendar { 
        background-color: #28a745; 
        color: white;
      }
      
      .btn-nuevo {
        background-color: #0f172a;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
      .btn-nuevo:hover {
        background-color: #1e293b;
        transform: translateY(-1px);
      }

      .btn:hover {
        opacity: 0.9;
      }
      
      .dataTables_filter input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        outline: none;
      }
      .dataTables_filter input:focus {
        border-color: #007bff;
      }