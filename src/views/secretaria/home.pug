extends ../layout.pug

block content
  style.
    .secretaria-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    .secretaria-title {
      color: #2c3e50;
      font-size: 2.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }
    .secretaria-menu {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    .secretaria-card {
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .secretaria-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
    .secretaria-link {
      display: block;
      padding: 1.5rem;
      text-decoration: none;
      color: #333;
      text-align: center;
    }
    .secretaria-link-title {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    .secretaria-link-description {
      font-size: 0.9rem;
      color: #666;
    }
    @media (max-width: 600px) {
      .secretaria-title {
        font-size: 2rem;
      }
    }

  .secretaria-container
    h1.secretaria-title(role="heading" aria-level="1") Panel de Secretaría
    .secretaria-menu
      .secretaria-card
        a.secretaria-link(href="/paciente/nuevo")
          .secretaria-link-title Crear Paciente y Persona
          .secretaria-link-description Registrar un nuevo paciente y su información personal
      .secretaria-card
        a.secretaria-link(href="/paciente/personas")
          .secretaria-link-title Asignar Rol Paciente
          .secretaria-link-description Asigna el rol de Paciente a una persona existente
      .secretaria-card
        a.secretaria-link(href="/paciente/lista")
          .secretaria-link-title Lista de Pacientes
          .secretaria-link-description Ver y gestionar la lista de pacientes registrados
