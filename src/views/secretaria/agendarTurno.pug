extends ../layout
block content
  .container-turno
    .containerFiltro
      .filtro1 
        select(name="especialidad" id="especialidad")
      .filtro1 
        select(name="medico" id="medico")
      .boton 
        button(type="button" id="limpiarbtn") Limpiar filtro 
    .calendar-container
      #texto
       #agenda
      #calendar(class="calendar")
      .horas-disponibles
        h2(id="date-title") Selecciona una fecha
        div(id="available-times")
  #turnoModal.modal 
    #modal-content 
      #modal-header Confirmaci√≥n de turno 
      form(id="confirmarTurnoForm" method="POST") 
        #form-field 
          p
            span#titulo Datos del paciente:
          p
            strong DNI:
            span=paciente.dni 
            span#dni 
          p
            strong Nombre:
            span=paciente.nombre 
            span#nombrePaciente 
          p 
            strong Apellido: 
            span=paciente.apellido 
            span#apellidoPaciente
          p
            strong Obra Social: 
            span=paciente.obrasocialNombre
            span#obraSocial 
          p
            hr
            span#titulo Datos del Profesinal:
          p
            strong Nombre completo: 
            span#doctor 
          p 
            strong Especialidad: 
            span#especialidadDoctor
          p
            strong Sucursal:
            span#sucursal 
          p
            strong Hora: 
            span#horario 
          p
            strong Fecha: 
            span#fecha 
          p 
            strong Motivo de consulta: 
            textarea#motivoConsulta(name="motivoConsulta" rows="3")

        #modal-footer 
          button(type="button" id="cerrarModal") Cancelar 
          button(type="button" id="confirmar") Confirmar  


