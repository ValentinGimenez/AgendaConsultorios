extends ../layout

block content
  .container
    h1.page-title Editar Paciente

    form#editarPacienteForm(method="POST" action=`/paciente/${paciente.id}/editar`)
      .patient-info
        .info-group
          label(for="id") ID
          input(type="text" id="id" value=paciente.ID readonly)
        .info-group
          label(for="nombre") Nombre
          input(type="text" id="nombre" value=paciente.nombre readonly)
        .info-group
          label(for="apellido") Apellido
          input(type="text" id="apellido" value=paciente.apellido readonly)
        .info-group
          label(for="dni") DNI
          input(type="text" id="dni" value=paciente.dni readonly)
        .info-group
          label(for="mail") Correo
          input(type="email" name="mail" id="mail" value=paciente.mail required)
        .info-group
          label(for="telefono") Teléfono
          input(type="text" name="telefono" id="telefono" value=paciente.telefono required)
        .info-group
          label(for="obrasocial") Obra Social
          select(name="obrasocial" id="obrasocial" required)
            each obraSocial in obrasSociales
              option(value=obraSocial.id, selected=(obraSocial.id == paciente.idObraSocial))= obraSocial.nombre 
      
      .form-actions
        button.btn.btn-primary(type="button" data-paciente-id=paciente.ID) Actualizar
        a.btn.btn-secondary(href="/pacientes") Cancelar

block scripts
  script(src='https://code.jquery.com/jquery-3.7.1.min.js')
  script(src='https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js')
  script.
    $(document).ready(function () {
      $('.btn-primary').on('click', function(event) {
        event.preventDefault();

        const pacienteId = $(this).data('paciente-id');
        const mail = $('#mail').val().trim();
        const telefono = $('#telefono').val().trim();
        const idObraSocial = $('#obrasocial').val();

        if (!mail) {
          showAlert('Por favor, ingresa un correo electrónico.', 'error');
          return;
        }
        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(mail)) {
          showAlert('Por favor ingresa un email válido.', 'error');
          return;
        }
        if (!telefono) {
          showAlert('Por favor, ingresa un número de teléfono.', 'error');
          return;
        }
        if (!/^\d{10}$/.test(telefono)) { 
          showAlert('Por favor ingresa un número de teléfono válido de 10 dígitos.', 'error');
          return;
        }

        try {
          fetch(`/paciente/${pacienteId}/actualizar`, { 
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ mail, telefono, idObraSocial }),
          })
          .then(response => {
            if (response.ok) {
              showAlert('Paciente actualizado exitosamente', 'success');
              window.location.href = '/paciente/lista';
            } else {
              return response.json().then(errorData => {
                showAlert('Error al actualizar el paciente: ' + (errorData.message || 'Error desconocido'), 'error');
              });
            }
          })
          .catch(error => {
            console.error('Error al enviar la solicitud:', error);
            showAlert('Error al actualizar el paciente.', 'error');
          });

        } catch (error) {
          console.error('Error al actualizar el paciente:', error);
          showAlert('Error al actualizar el paciente.', 'error');
        }
      });

      function showAlert(message, type) {
        const alertDiv = $('<div>').addClass('alert').addClass(`alert-${type}`).text(message);
        $('.container').prepend(alertDiv);
        setTimeout(() => alertDiv.fadeOut('slow', function() { $(this).remove(); }), 5000);
      }
    });

  block styles
    style.
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }

      .page-title {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
      }

      .patient-info {
        background-color: #f9f9f9;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
      }

      .info-group {
        margin-bottom: 15px;
      }

      .info-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
      }

      .info-group input,
      .info-group select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
      }

      .info-group input[readonly] {
        border: none;
        background-color: #eee; 
        font-weight: bold; 
      }
      .info-group input[readonly]:hover {
        cursor:default ;
      }


      .form-actions {
        text-align: right;
      }

      .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
      }

      .btn-primary {
        background-color: #007bff;
        color: white;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      .btn-secondary {
        background-color: #6c757d;
        color: white;
        text-decoration: none;
        margin-left: 10px;
      }

      .btn-secondary:hover {
        background-color: #545b62;
      }

      .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
      }

      .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
      }

      .alert-error {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
      }