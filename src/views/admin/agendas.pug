      /* ── Modal Editar Horario ── */
      window.abrirModalEditar = async function(idHorario, dia, hi, hf, fi, ff, dur, sob) {
        editandoIdHorario = idHorario;
        document.getElementById('editDia').value = dia;
        document.getElementById('editHoraInicio').value = hi;
        document.getElementById('editHoraFin').value = hf;
        document.getElementById('editFechaInicio').value = fi;
        document.getElementById('editFechaFin').value = ff;
        document.getElementById('editDuracion').value = dur;
        document.getElementById('editSobreturno').value = sob;

        // Contar turnos afectados
        var warningEl = document.getElementById('modalWarning');
        warningEl.style.display = 'none';
        try {
          var res = await fetch('/horario/contarTurnosAfectados/' + idHorario, {
            credentials: 'same-origin',
            headers: { 'Accept': 'application/json' }
          });
          if (res.ok) {
            var datos = await res.json();
            if (datos.turnosConPaciente > 0) {
              warningEl.innerHTML = '<strong>Atencion:</strong> Este horario tiene <strong>' + datos.turnosConPaciente + '</strong> turno(s) con paciente asignado. Los turnos que queden fuera del nuevo rango seran cancelados automaticamente. Los turnos libres se regeneraran.';
              warningEl.style.display = '';
            } else {
              warningEl.innerHTML = 'Este horario tiene <strong>' + datos.turnosLibres + '</strong> turno(s) libre(s) que seran regenerados con la nueva configuracion.';
              warningEl.style.display = '';
              warningEl.style.background = '#ebf8ff';
              warningEl.style.borderColor = '#90cdf4';
              warningEl.style.color = '#2a4365';
            }
          }
        } catch(e) { /* ignore */ }

        document.getElementById('modalEditarHorario').classList.add('show');
      };

      window.cerrarModalEditar = function() {
        editandoIdHorario = null;
        document.getElementById('modalEditarHorario').classList.remove('show');
        // Reset warning styles
        var w = document.getElementById('modalWarning');
        w.style.display = 'none';
        w.style.background = '';
        w.style.borderColor = '';
        w.style.color = '';
      };

      window.guardarEdicion = async function() {
        if (!editandoIdHorario) return;

        var dia = document.getElementById('editDia').value;
        var horaInicio = document.getElementById('editHoraInicio').value;
        var horaFin = document.getElementById('editHoraFin').value;
        var fechaInicio = document.getElementById('editFechaInicio').value;
        var fechaFin = document.getElementById('editFechaFin').value;
        var duracion = Number(document.getElementById('editDuracion').value);
        var sobreturno = Number(document.getElementById('editSobreturno').value);

        // Validaciones basicas
        if (!horaInicio || !horaFin) { alert('Complete las horas.'); return; }
        if (!fechaInicio || !fechaFin) { alert('Complete las fechas.'); return; }
        if (fechaFin < fechaInicio) { alert('La fecha fin no puede ser anterior a la fecha inicio.'); return; }
        if (!duracion || duracion < 10 || duracion > 60 || duracion % 10 !== 0) {
          alert('La duracion debe ser 10, 20, 30, 40, 50 o 60 minutos.');
          return;
        }
        if (sobreturno < 0 || sobreturno > 10) { alert('Sobreturnos entre 0 y 10.'); return; }

        // Validar que el rango horario alcance para al menos 1 turno
        var hiParts = horaInicio.split(':').map(Number);
        var hfParts = horaFin.split(':').map(Number);
        var diffMin = (hfParts[0] * 60 + hfParts[1]) - (hiParts[0] * 60 + hiParts[1]);
        if (diffMin < duracion) {
          alert('El rango horario debe ser al menos ' + duracion + ' minutos.');
          return;
        }
        if (diffMin > 480) {
          alert('El rango horario no puede exceder 8 horas.');
          return;
        }

        if (!confirm('Se editara el horario. Los turnos libres se regeneraran y los turnos con paciente fuera del nuevo rango seran cancelados. Continuar?')) {
          return;
        }

        try {
          var res = await fetch('/horario/editarHorario/' + editandoIdHorario, {
            method: 'PUT',
            credentials: 'same-origin',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify({
              dia_semana: dia,
              hora_inicio: horaInicio,
              hora_fin: horaFin,
              fecha_inicio: fechaInicio,
              fecha_fin: fechaFin,
              duracionTurno: duracion,
              sobreturnoMax: sobreturno
            })
          });

          if (res.ok) {
            alert('Horario editado correctamente.');
            cerrarModalEditar();
            await cargarAgendas();
          } else {
            var data = await res.json().catch(function() { return {}; });
            alert(data.message || 'Error al editar el horario.');
          }
        } catch(err) {
          alert('Error al editar el horario.');
          console.error(err);
        }
      };

