extends layout 



block content
  .container-turno
    .containerFiltro
      .filtro1 
        select(name="especialidad" id="especialidad")
      .filtro1 
        select(name="medico" id="medico")
      .boton 
        button(type="button" id="limpiarbtn") Limpiar filtro 
      .boton
        button(type="button" id="buscar") Ver turnos 
    .calendar-container
      #texto
       #agenda
      #calendar(class="calendar")
      .horas-disponibles
        h2(id="date-title") Selecciona una fecha
        div(id="available-times")
  #turnoModal.modal 
    #modal-content 
      #modal-header Confirmaci√≥n de turno 
      form(id="confirmarTurnoForm" method="POST") 
        #form-field 
          label(for="dni") DNI:
          span(style="color: red;") * 
          input(type="text" id="dni" required)
          button(type="button" id="buscarDni") Buscar 
        #form-field 
          label(for="nombre") Nombre: 
          span(style="color: red;") *
          input(type="text" id="nombre" disabled)
        #form-field 
          label(for="apellido") Apellido: 
          span(style="color: red;") *
          input(type="text" id="apellido" disabled)
        #form-field 
          label(for="mail") Email: 
          span(style="color: red;") *
          input(type="email" id="mail" disabled)
        #form-field 
          label(for="telefono") Telefono:
          span(style="color: red;") * 
          input(type="text" id="telefono" disabled)
        #form-field 
          p
            strong Doctor: 
            span#doctor 
          p 
            strong Especialidad: 
            span#especialidadDoctor
          p
            strong Sucursal:
            span#sucursal 
          p
            strong Hora: 
            span#horario 
          p
            strong Fecha: 
            span#fecha 
        #modal-footer 
          button(type="button" id="cerrarModal") Cancelar 
          button(type="button" id="confirmar") Confirmar  


